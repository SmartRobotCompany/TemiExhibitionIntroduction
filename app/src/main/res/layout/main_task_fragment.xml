<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EFCA">

    <HorizontalScrollView
        android:layout_width="1200dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/mg400_tablet_button"
                android:layout_width="500dp"
                android:layout_height="450dp"
                android:background="@drawable/button_setting"
                android:drawableBottom="@drawable/mg400_tablet"
                android:paddingBottom="35dp"
                android:text="平板觸控測試"
                android:textAlignment="center"
                android:textSize="55dp" />

            <Button
                android:id="@+id/mg400_scale_button"
                android:layout_width="500dp"
                android:layout_height="450dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_setting"
                android:drawableBottom="@drawable/mg400_scale"
                android:paddingBottom="35dp"
                android:text="電路板波形測試"
                android:textAlignment="center"
                android:textSize="55dp" />

            <Button
                android:id="@+id/mg400_router_button"
                android:layout_width="500dp"
                android:layout_height="450dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_setting"
                android:drawableBottom="@drawable/mg400_router"
                android:paddingBottom="35dp"
                android:text="路由器測試"
                android:textAlignment="center"
                android:textSize="55dp" />

            <Button
                android:id="@+id/cr5_button"
                android:layout_width="500dp"
                android:layout_height="450dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_setting"
                android:drawableBottom="@drawable/cr5_inform"
                android:paddingBottom="35dp"
                android:text="CR5協作型手臂"
                android:textAlignment="center"
                android:textSize="55dp" />

            <Button
                android:id="@+id/thouzer_button"
                android:layout_width="500dp"
                android:layout_height="450dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_setting"
                android:drawableBottom="@drawable/thouzer_inform"
                android:paddingBottom="35dp"
                android:text="Thouzer Basic"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textSize="55dp" />

            <Button
                android:id="@+id/temi_button"
                android:layout_width="500dp"
                android:layout_height="450dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_setting"
                android:drawableBottom="@drawable/temi_inform"
                android:paddingBottom="35dp"
                android:text="Temi服務型機器人"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="55dp" />

        </LinearLayout>

    </HorizontalScrollView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:srcCompat="@drawable/company_qrcode" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/facebook_qrcode" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:srcCompat="@drawable/cross" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="461dp"
        android:layout_height="122dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smartrobot" />

</androidx.constraintlayout.widget.ConstraintLayout>